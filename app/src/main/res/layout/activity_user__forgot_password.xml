<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.User_ForgotPassword">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:background="@color/colorPrimary"
            app:titleTextColor="@android:color/white" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="パスワードを再設定"
            android:textColor="#6018DF"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/email"
            android:textColor="@color/darkTextColor"
            android:textColorHint="@color/TextColor_hint"
            android:background="@drawable/custom_button"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:hint="メールアドレス"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_height="58dp">
        </EditText>
        <Button
            android:id="@+id/sendMessage"
            android:layout_width="129dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button"
            android:text="送信"
            android:textColor="#6018DF"
            android:textSize="25dp">
        </Button>
        <TextView
            android:id="@+id/resetText"
            android:textStyle="bold"
            android:textColor="#6018DF"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="メールにパスワードの変更のリンクを送信します❕"
            android:layout_width="match_parent"
            android:layout_height="58dp">

        </TextView>
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:indeterminateTint="@color/cardview_dark_background"
            tools:targetApi="lollipop"
            android:visibility="gone">
        </ProgressBar>
    </LinearLayout>

</RelativeLayout>